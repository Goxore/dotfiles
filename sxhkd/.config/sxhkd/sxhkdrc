# scripts
super + a
	bash $SCRIPTS/fastaccess.sh

super + shift + c
	bash $SCRIPTS/editconfig.sh

super + s
	bash $SCRIPTS/sb -r

super + v
	bash $SCRIPTS/mictoggle.sh

super + ctrl + c
	rofi -modi 'clipboard:greenclip print' -show clipboard -run-command '{cmd}'

#music
super + plus
	mpc volume +5

super + minus
	mpc volume -5

super + p
	mpc toggle

super + bracketright
	mpc next

super + bracketleft
	mpc prev

super + u
	rofi-rbw
super + Delete
	$SCRIPTS/holdwork.sh

super + Insert
	$SCRIPTS/continuework.sh
